
<div class="col-md-8" style="margin-top: 10px;">

    <div class="panel panel-default">

        <ul class="list-group">
            <li ng-repeat="item in shopcart" class="list-group-item">
                <div class="row">
                    <div class="col-md-5" align="center" >
                        <h4>Features in : <label>{{item.category}}</label></h4>
                    </div>
                    <div class="col-md-7">
                        <h4>Per unit price : <label>{{item.unit_price}}$</label></h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5" >
                        <img src="placeholderImage.jpg">
                    </div>
                    <div class="col-md-7">
                        <div class="panel panel-default">
                            <div class="panel-body" style="background-color: #f6f6f6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h4>Title :{{item.text}}</h4>
                                    </div>

                                </div>
                                <div class="row" style="margin-top: 20px">
                                    <div class="col-md-6">
                                        <h4>Quantity: {{item.quant}} </h4>
                                    </div>
                                    <div class="col-md-6">
                                        <h4>Shipping From : {{item.shipping}}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer" style="background-color: #fcfcfc">
                                <div class="row">

                                    <div class="col-md-6">
                                       <h4>Net Price : {{item.unit_price*item.quant}}$</h4>
                                    </div>
                                    <div class="col-md-1 ">
                                        <input type="button" value="Remove from Cart" class="btn btn-primary" ng-click="remove(item.item_id)">                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>

            <li ng-repeat="item in bidItem" class="list-group-item">
                <div class="row">
                    <div class="col-md-5" align="center" >
                        <h4>Features in : <label>{{item.category}}</label></h4>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-5" >
                        <img src="placeholderImage.jpg">
                    </div>
                    <div class="col-md-7">
                        <div class="panel panel-default">
                            <div class="panel-body" style="background-color: #f6f6f6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h4>Title :{{item.text}}</h4>
                                    </div>

                                </div>
                                <div class="row" style="margin-top: 20px">
                                    <div class="col-md-6">
                                        <h4>Quantity: {{item.qty}} </h4>
                                    </div>
                                    <div class="col-md-6">
                                        <h4>Shipping From : {{item.shipping}}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer" style="background-color: #fcfcfc">
                                <div class="row">

                                    <div class="col-md-6">
                                        <h4>Net Price : {{item.highestamt}}$</h4>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>

</div>
</div>
<div class="col-md-4"  style="margin-top: 10px;" >
    <div class="row">

                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-12">
                            <h3 style="margin-bottom: 50px"> Order Total : {{TotalAmt}}$ </h3>
                            <hr>
                        </div>

                        <div class="col-md-6">

                            <a ui-sref="checkout" ng-hide="checkout" class="btn btn-warning btn-lg" style="margin-top: 10px">CheckOut</a>
                        </div>
                        </div>


    </div>
        </div>

</div>





